<Window x:Class="MyFlix.Views.FileInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFlix.Views"
        mc:Ignorable="d"
        Title="MediaFileInfoWindow" Height="200" Width="300"
        WindowStartupLocation="CenterOwner">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="1">
        <Label Content="{Binding title}" FontWeight="Bold" />
        <TextBlock Text="{Binding filePath}" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
